    "<~welcome.title>",
    "<~welcome.text1> <b>" + ini_get("rom_name") + " " +
        ini_get("rom_version") + "</b> <~by> <b>" + ini_get("rom_author") +
        "</b>.\n\n\n\n" +

        "<~sys.title>\n\n" +

        "  <~welcome.version>\t\t:\t<b><#selectbg_g>" + ini_get("rom_version") +
