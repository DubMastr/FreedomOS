ini_set("rom_name",             "ARISE");
ini_set("rom_version",          "RC7");
ini_set("rom_author",           "Team ARISE");
ini_set("rom_device",           "All devices");
ini_set("rom_date",             "Today");

ini_set("force_colorspace","rgba");
ini_set("dp","8");

fontresload( "0", "ttf/Roboto-Regular.ttf", "12" );
fontresload( "1", "ttf/Roboto-Regular.ttf", "18" ); 

viewbox(
    "Welcome",
    "You are about to flash <b>"+
	  ini_get("rom_name")+
	"</b>\nfor <b>"+ini_get("rom_device")+"</b>.\n\n"+
    
	
      "  VERSION\t: <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
      "  AUTHOR \t: <b><#selectbg_g>"+ini_get("rom_author")+"</#></b>\n"+
      "  RELEASED\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+

    "Press Next to Continue...",
    "@welcome"
);

selectbox(
  "Android Version","","","info.prop",

  "Version","",2,
  "JB/KK","",0,
  "LP/MM","",0,
  "N Preview","",0
);
selectbox(
  "Manufacturer","","","phone.prop",

  "Manufacturer","",2,
  "sony","",0,
  "not sony","",1,

"Manufacturer","",2,
  "lg","",0,
  "not lg","",1,

"Manufacturer","",2,
  "htc","",0,
  "not htc","",1
);
selectbox(
  "Tweakprop","","","tweak.prop",
  "guitardedhero","",1,
  "sonophilos","",0,
  "smeejaytee","",0,
  "custom","",0,
  "no tweakprop","",0
);

selectbox(
  "Presets","","","preset.prop",
  "Audio Effects","",2,
  "exodus","",1,
  "xplay3s","",0,

  "HTC Effects","",2,
  "boomsound","",1,
  "harmon kardon","",0,
  "jbl","",0
);

selectbox(
  "Dolby","","","dolby.prop",
  "Dolby","",2,
  "dolby atmos","",1,
  "dd+","",0,
  "both","",0,
  "neither","",0
);

selectbox(
  "Profiles","","","dts.prop",

  "DTS Config","Use whichever one works for you",2,
  "system install","For use on Android N",0,
  "data install","For use on LP/MM",1
);

menubox(
  "ARISE Installer",
  "Ready to install",
  "@info",
  "menu.prop",
  "Install ARISE","","@install",
  "Abort installation","","@default"
);

if prop("menu.prop","selected")=="2"
then
  exit("");
endif;

setvar("retstatus",
install(
  "Installing",
  "Installing ARISE...\nPlease wait...",
  "@install")
);

ini_set("text_next", "Finish");

if getvar("retstatus")=="0" then
  viewbox(
  "Installation Completed",
  "<#080>Congratulations...</#>\n\n"+
  "ARISE has been installed successfully!\n\n"+
  "Enjoy!",
  "@info"
);
else
   viewbox("Installation Failed","\n\nInstaller Status: "+ getvar("retstatus"),"@alert");
endif;
