ini_set("rom_name",			"ALEXIS ROM ");
ini_set("rom_version",		"v.5.5 ODEX BETA 1");
ini_set("rom_author",		"AlexisXDA");
ini_set("rom_device",		"Samsung Galaxy S6 G92xF/I");
ini_set("rom_date",			"28/06/2016");
ini_set("force_colorspace", "rgba");
##
anisplash(
    3,
    "splash/alexis", 1500
);

fontresload( "0", "ttf/DroidSans.ttf;", "12" ); #-- Use sets of font (Font Family)

theme("Alexis");

viewbox(
    "Welcome",
    "Installation <b>"+
	  ini_get("rom_name")+
	"</b> for <b>"+ini_get("rom_device")+"</b>.\n\n"+
    "Rom Info:\n\n"+
	  "  Rom\t		<b><#selectbg_g>"+ini_get("rom_name")+"</#></b>\n"+
      "  Version\t	<b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
	  "  Date\t 		<b><#selectbg_g>28/06/2016</#></b>\n\n"+
    "<b><#f00>AlexisXDA</#></b>\n\n\n"+	
	"Press Next to Continue ...",
    "@welcome"
);


selectbox(
	  "Wipe",
	  "Wipe Options :",
	  "icons/update",
	  "wipe.prop",

	  "Data/factory reset",	"",	                               		                            					2, #-- Group 1. key = "selected.1"
	  "Yes",				"Full-wipe (factory reset)",	0,	#-- selected.1 = 1
	  "No",      			"I want to keep my Data/apps ",			1	#-- selected.1 = 2
);

selectbox(
	  "920 or 925?",
	  "Choose kernel",
	  "icons/update",
	  "model.prop",

	  "Choose your stock kernel model",	"",	                               		                            					2, #-- Group 1. key = "selected.1"
	  "G920 F/FD/K/L/S",				"",	1,	#-- selected.1 = 1
	  "G925 F/K/L/S",      				"",			0	#-- selected.1 = 2
);

ini_set("text_next", "Next");

viewbox(
    "Ready to Install",
    "Ready to begin installation.\n\n"+
	"Press <b>Next</b> to install Alexis Rom.\n\n"+
	"If you want to review or change any of your installation settings, press <b>Back</b>.",
    "@install"
);

setvar("retstatus",
  install(
	#-- Title
      "Installing",
	
	#-- Installation Process message
	  "<b>"+ini_get("rom_name")+"</b> installation.\n\n"+
      "Please wait while installation wizard installs <b>"+ini_get("rom_name")+
	  "</b>. This may take several minutes.",
	
	#-- Installation Icon
      "@install",
	
	#-- Installation Finish Message
      "The installation wizard has successfully installed <b>"+ini_get("rom_name")+
	  "</b>. Press Next to continue."
  )
);

ini_set("text_next", "Finish");

